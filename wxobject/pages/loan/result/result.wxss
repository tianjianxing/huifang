/* 顶部导航 */
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  padding: 20rpx;
  text-align: center;  
  font-weight: bold;
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: blue;  
  font-weight: bold;
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 44%;  
  right: 0;  
  height: 8rpx;  
  background: blue;
  width: 40rpx;  
}
/* 页面主题内容 */
.contain{
  margin: auto;
  width: 90%;
  height: 100%;
  margin-top: 20rpx;
}
/* 页面主题的顶部蓝色区域 */
.topContain{
  background-color: rgba(0, 89, 255, 0.781);
  border-radius: 20rpx;
  color: #fff;
  height: 190px;
}
.everyMonth{
  font-size: 14px;
  display: block;
  margin: auto;
  padding-top: 50rpx;
  text-align: center;
}
/* 利息总额 */
.monthlyRent{
  margin: auto;
  width: 100%;
  text-align: center;
}
.monthlyRent .tip{
  display: block;
  font-size: 12px;
  height: 40rpx;
}
.unit{
  display: inline-block;
}
.unit .help{
  font-size: 14px;
}
.unit text{
  font-size: 14px;
}
.monthMoney{
  font-size: 36px;
}
/* 蓝色区域底部那一行内容 */
.sumUp{
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0 70rpx 0;
}
.sumUp view{
  padding: 0 40rpx;
}
.sumUp text{
  display: block;
  text-align: center;
}
.sumUp .font{
  font-size: 14px;
  color: #ccc;
}
.sumUp .number{
  font-size: 16px;
}
.sumUp .middle{
  border-left: 1px solid #fff;
  border-right: 1px solid #fff;
}
.words{
  margin: 50rpx 0;
  font-size: 14px;
}
.words text{
  color: blue;
  font-weight: bold;
}
/* 表格明细内容 */
.table{
  font-size: 12px;
  width: 100%;
  height: 150px;
}
/* 表格的滚动条 */
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.tr{
  width: 100%;
  display: flex;
  justify-content: space-around;
}
.th{
  background-color: #e7e9e9;
  font-weight: bold;
}
.th,.td{
  width: 100%;
  border-bottom: 1px solid #ccc;
  padding: 20rpx 0;
}
.tdOne{
  padding-left: 20rpx;
  width: 60%;
}
/* 底部客服业务内容 */
.bottomContain{
  width: 100%;
  height: 60px;
  position: absolute;
  bottom: 0;
  background-color: #fff;
  border: 2px solid #f6f8f8;
}
.bottomContain .online,.bottomContain .phone{
  float: right;
  text-align: center;
  font-size: 14px;
  width: 70px;
  height: 36px;
  color: #fff;
  line-height: 36px;
  margin-right: 6px;
  margin-top: 12px;
  font-weight: normal;
  border-radius: 10rpx;
}
.online{
  background-color: green;
}
.bottomContain .phone{
  background-color: blue;
  margin-right: 15px;
}